<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="budgetquest.controller.RegisterController"
            prefWidth="400" prefHeight="450">
    <VBox spacing="10" layoutX="50" layoutY="30" prefWidth="300">
        <Label text="Register" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

        <TextField fx:id="usernameField" promptText="Username"/>
        <TextField fx:id="firstNameField" promptText="First Name"/>
        <TextField fx:id="lastNameField" promptText="Last Name"/>
        <TextField fx:id="emailField" promptText="Email"/>
        <PasswordField fx:id="passwordField" promptText="Password"/>

        <Button text="Register" onAction="#handleRegister"/>
        <Button text="Back to Login" onAction="#switchToLogin"/>
        <Label fx:id="statusLabel" textFill="red"/>
    </VBox>
</AnchorPane>
