<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="441.0" prefWidth="367.0" spacing="15.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="budgetquest.controller.NetWorthFormController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Add Net Worth Record">
      <font>
         <Font size="14.0" />
      </font></Label>

    <DatePicker fx:id="datePicker" promptText="Select Date" />

    <TextField fx:id="assetsField" promptText="Assets Value (€)">
      <font>
         <Font size="15.0" />
      </font></TextField>
    <TextField fx:id="liabilitiesField" promptText="Liabilities Value (€)">
      <font>
         <Font size="15.0" />
      </font></TextField>

    <Label fx:id="netWorthLabel" text="Net Worth: € 0.00">
      <font>
         <Font size="15.0" />
      </font></Label>

    <Button onAction="#handleSave" text="Save" />

</VBox>
