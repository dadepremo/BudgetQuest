<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="budgetquest.controller.CategoryManagerController">
    <VBox spacing="10.0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

        <Label text="Category Manager" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <TableView fx:id="categoryTable" prefHeight="400">
            <columns>
                <TableColumn fx:id="nameColumn" text="Name" prefWidth="300" />
                <TableColumn fx:id="typeColumn" text="Type" prefWidth="300" />
            </columns>
        </TableView>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Save Changes" onAction="#handleSaveChanges" />
        </HBox>

    </VBox>
</AnchorPane>
