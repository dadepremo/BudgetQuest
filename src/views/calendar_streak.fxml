<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<BorderPane fx:controller="controller.CalendarStreakController"
            xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx/23.0.1"
            prefWidth="600" prefHeight="500">

    <top>
        <HBox spacing="20" style="-fx-padding: 15;" alignment="CENTER">
            <Button fx:id="prevMonthButton" text="⟵" />
            <Pane HBox.hgrow="ALWAYS" />
            <Label fx:id="monthLabel" text="June 2025" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button fx:id="nextMonthButton" text="⟶" />
        </HBox>

    </top>

    <center>
        <GridPane fx:id="calendarGrid" hgap="10" vgap="10" style="-fx-padding: 20;">
            <!-- dynamically generated -->
        </GridPane>
    </center>

</BorderPane>
